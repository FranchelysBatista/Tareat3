@using SportActivityTracking.Api.Dtos
@model List<SportActivityTracking.Api.Dtos.ActividadesDeportivasDtos>

<h2>Lista de Actividades Deportivas</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<table class="table">
    <thead>
        <tr>
            <th>Descripción</th>
            <th>Fecha</th>
            <th>Duración (minutos)</th>
            <th>Tipo de Deporte</th>
            <th>Usuario</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var actividad in Model)
        {
            <tr>
                <td>@actividad.Descripcion</td>
                <td>@actividad.Fecha.ToString("dd/MM/yyyy")</td>
                <td>@actividad.DuracionMinutos</td>
                <td>@actividad.TipoDeporte</td>
                <td>@actividad.Usuario</td>
                <td>
                    <a asp-action="Details" asp-route-id="@actividad.Id" class="btn btn-info">Detalles</a>
                    <a asp-action="Edit" asp-route-id="@actividad.Id" class="btn btn-warning">Editar</a>
                    <a asp-action="Delete" asp-route-id="@actividad.Id" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Crear Nueva Actividad</a>
