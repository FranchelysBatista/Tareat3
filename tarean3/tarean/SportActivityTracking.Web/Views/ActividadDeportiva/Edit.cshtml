@model SportActivityTracking.Web.Models.Entidad.ActividadDeportiva

@{
    ViewData["Title"] = "Editar Actividad Deportiva";
}

<h2>Editar Actividad Deportiva</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label for="NombreActividad">Nombre de la Actividad</label>
        <input type="text" class="form-control" id="NombreActividad" name="NombreActividad" asp-for="NombreActividad" required />
    </div>

    <div class="form-group">
        <label for="Fecha">Fecha</label>
        <input type="date" class="form-control" id="Fecha" name="Fecha" asp-for="Fecha" required />
    </div>

    <div class="form-group">
        <label for="DuracionMinutos">Duración (minutos)</label>
        <input type="number" class="form-control" id="DuracionMinutos" name="DuracionMinutos" asp-for="DuracionMinutos" required />
    </div>

    <button type="submit" class="btn btn-warning mt-3">Actualizar Actividad</button>
</form>