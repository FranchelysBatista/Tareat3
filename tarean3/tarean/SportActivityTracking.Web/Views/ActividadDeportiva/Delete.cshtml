@using SportActivityTracking.Api.Dtos
@model SportActivityTracking.Api.Dtos.ActividadesDeportivasDtos

<h2>Eliminar Actividad</h2>
<p>¿Estás seguro de que quieres eliminar la actividad "<strong>@Model.Usuario</strong>"?</p>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
